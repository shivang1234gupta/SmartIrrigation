        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:text="Submit"
            android:id="@+id/submit">
        </Button>

